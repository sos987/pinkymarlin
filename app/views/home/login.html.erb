  <style>
html {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 16px;
  color: white;
  background: black;
  min-width: 960px;
  margin: 0;
  padding: 0;
  height: 100%;
  min-height: 100%;
}

a {border: 0; outline: 0;}

.wrapper {width: 460px; margin: 0 auto; min-height: 100%; margin-bottom: -34px;}

* html .wrapper {height: 100%;}

.refresher {
  padding-top: 170px;
  margin: 0 auto;
  width: 20px;
}

.refresher a {
  display: block;
  text-indent: -9999em;
  width: 20px;
  height: 24px;
  background: url(<%=asset_path('login/reload.png')%>) no-repeat;
}

.logo {
  padding-top: 20px;
  text-align: center;
  width: 100px;
  margin: 0 auto;
}

.logo a {
  display: block;
  text-indent: -9999em;
  width: 200px;
  height: 110px;
  background: url(<%=asset_path('login/logo.png')%>) no-repeat;
}

.promoform {padding-top: 30px;}

.promoform .bordercode {
  width: 456px;
  height: 44px;
  padding: 2px;
  background: url(<%=asset_path('login/pixel.png')%>) repeat;
}

.promoform #promocode {
  width: 431px;
  height: 33px;
  background: url(<%=asset_path('login/field.png')%>) no-repeat;
  border: 0;
  outline: 0;
  padding: 5px 12px;
  font-size: 18px;
  font-style: italic;
  text-align: center;
  color: #999;
  vertical-align: bottom;
  text-transform: uppercase;
}

.promoform .bordersubmit {
  width: 136px;
  height: 43px;
  padding: 2px;
  background: url(<%=asset_path('login/pixel.png')%>) repeat;
  margin: 10px auto 0;
}

.promoform #submitcode {
  width: 134px;
  height: 43px;
  background: url(<%=asset_path('login/button.png')%>) no-repeat;
  border: 0;
  outline: 0;
  font-size: 16px;
  font-style: italic;
  text-align: center;
  color: #333;
  vertical-align: middle;
  cursor: pointer;
}

.buffer {height: 44px;}

.social {
  width: 460px;
  margin: 0 auto;
  clear: both;
}

.soc {float: left;}
.social .vk {width: 160px;}
