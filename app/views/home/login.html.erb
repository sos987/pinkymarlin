  font-size: 16px;
  color: white;
  background: black;
  min-width: 960px;
  margin: 0;
  padding: 0;
}

a {border: 0; outline: 0;}

.wrapper {width: 720px; margin: 0 auto;}

.logo {
  text-align: center;
  padding-top: 40px;
  width: 200px;
  margin: 0 auto;
}

.logo a {
  display: block;
  text-indent: -9999em;
  width: 200px;
  height: 110px;
  background: url(<%=asset_path('login/logo.png')%>) no-repeat;
}

.promoform {padding-top: 200px;}

.promoform p {
  display: block;
  text-indent: -9999em;
  width: 182px;
  height: 20px;
  background: url(<%=asset_path('login/text.png')%>) no-repeat;
  margin: 0;
  padding: 0;
}

.promoform #promocode {
  width: 519px;
  height: 70px;
  background: url(<%=asset_path('login/field.png')%>) no-repeat;
  border: 0;
  outline: 0;
  padding: 0 12px;
  font-size: 32px;
  font-style: italic;
  color: #80807f;
  vertical-align: middle;
  line-height: 70px;
}

.promoform #submitcode {
  width: 169px;
  height: 70px;
  background: url(<%=asset_path('login/button.png')%>) no-repeat;
  border: 0;
  outline: 0;
  vertical-align: middle;
  cursor: pointer;
}

