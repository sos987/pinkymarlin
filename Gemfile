  gem 'therubyracer', :require => 'v8'
  gem 'execjs'
  gem 'sass-rails'
  gem 'compass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'oily_png', '~> 1.0.1'
  gem 'quiet_assets'
end

group :development do
  gem 'standup'
  gem 'unicorn'
end

